datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Tool {
  id        Int     @id @default(autoincrement())
  name      String
  quantity  Int
  borrowed  Int     @default(0)
  imageUrl  String?
  createdAt DateTime @default(now())
}

model History {
  id        Int     @id @default(autoincrement())
  toolId    Int
  toolName  String
  qty       Int
  nim       String
  borrower  String
  phone     String?
  createdAt DateTime @default(now())
  @@index([toolId])
}